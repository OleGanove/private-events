<div class="container">
  <%= form_for(@event) do |f| %>

    <%= f.label :location %><br>
    <%= f.text_field :location %> <br>

    <%= f.label :date %><br>
    <%= f.date_field :date %><br>
    
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>

    <br>

    <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
  <% end %>
</div>